import Layout from '../layouts/Layout.astro';
import HomeView from '../components/HomeView';
import UserAuth from '../components/UserAuth';
---

<Layout title="Na Winie - Grab & Cook">
	<!-- Header Section -->
	<header class="bg-gradient-to-r from-orange-500 to-yellow-500 text-white shadow-lg">
		<div class="container mx-auto px-4 py-6">
			<div class="flex items-center justify-between">
				<div>
					<h1 class="text-4xl font-bold">Na Winie - Grab & Cook</h1>
					<p class="text-lg mt-2 opacity-90">Typ dania - przepisy i pomys≈Çy</p>
				</div>
				<div>
					<UserAuth client:load />
				</div>
			</div>
		</div>
	</header>

	<!-- Main Content -->
	<main class="min-h-screen bg-gray-50">
		<HomeView client:load />
	</main>
</Layout> 